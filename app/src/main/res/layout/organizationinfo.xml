<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <!-- Screen Design for Organization Information -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dip"
        android:text="ORGANIZATION INFORMATION"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/eventTitle"
        android:background="@color/input_login" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        //Organization Name

        <TextView
            android:id="@+id/txtView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:paddingBottom="20dp"
            android:text="Organization Name :"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textOrgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15px"
            android:paddingTop="15px"
            android:text="test"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />

    </LinearLayout>

    //Organization Address

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:paddingBottom="20dp"
            android:text="Address :"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15px"
            android:text="test"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />

    </LinearLayout>

    //Organization Contact Number

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:paddingBottom="20dp"
            android:text="Organization Contact Number:"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15px"
            android:text="test"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />

    </LinearLayout>

    //Who They Help

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:paddingBottom="20dp"
            android:text="Who They Help :"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textWhoTheyHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15px"
            android:text="test"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />

    </LinearLayout>

    //How They Help

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtView1"
            android:layout_marginStart="14dp"
            android:paddingBottom="20dp"
            android:text="How They Help :"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textHowTheyHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textWhoTheyHelp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingBottom="15px"
            android:text="test"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />
    </LinearLayout>

    //How Can You Be Involved

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtView3"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="14dp"
            android:paddingBottom="20dp"
            android:text="How You Can Be Involved:"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textHowYouCanBeInvolved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textHowTheyHelp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingBottom="15px"
            android:text="test"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>