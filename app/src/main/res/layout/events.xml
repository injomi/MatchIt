<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cipTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_marginStart="14dp"
                android:paddingTop="5dp"
                android:text="CIP Hours: "
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/cipHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_toRightOf="@id/cipTitle"
                android:paddingTop="5dp"
                android:text="0"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="20dip"
                android:text="EVENTS JOINED"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/eventTitle"
                android:background="@color/input_login" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view"
                android:layout_marginStart="14dp"
                android:paddingTop="15dp"
                android:text="See the current events you joined!"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cipTitle"
                android:layout_marginStart="14dp"
                android:paddingTop="15dp"
                android:text="Registered Events"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <ListView
                android:id="@+id/listViewCurrentEvent"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/lv_bg"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/listViewCurrentEvent"
                android:layout_marginStart="14dp"
                android:paddingTop="15dp"
                android:text="Past Events"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <ListView
                android:id="@+id/listViewPastEvent"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/lv_bg"
                android:textColor="@color/colorBlack" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>